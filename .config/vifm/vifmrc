fileviewer *.png,*.jpeg,*.jpg,*.gif wezterm imgcat --height %ph %c:p %pd

let $SHELL='/bin/sh'
set shell='/bin/sh'

nnoremap mv :move<cr>
nnoremap rn :!vidir<cr>

nnoremap b :bmgo<cr>
delmarks!
bmark! /mnt/ mount
mark m /mnt/
mark p ~/src/play/
bmark! ~/src/play/ play
mark a ~/archive/
bmark! ~/archive/ archive
mark b ~/archive/books/
bmark! ~/archive/books/ books
mark h ~/
mark r /


