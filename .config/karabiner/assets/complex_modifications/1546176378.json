{
  "title": "Change fn + grave_accent_and_tilde to esc",
  "rules": [
    {
      "description": "Change fn + grave_accent_and_tilde to esc",
      "manipulators": [
        {
         "type": "basic",
          "from": {
            "key_code": "grave_accent_and_tilde",
            "modifiers": {
                "mandatory": [
                  "fn"
                ]
            }
          },
          "to": [
            {
              "key_code": "escape"
            }
          ]
        }
      ]
    }
  ]
}
